generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  username String
  email String @unique
  password String
  tasks Task []
}

type Task {
  title String
  description String?
  status String @default("pending")
  createdAt DateTime @default(now())
}